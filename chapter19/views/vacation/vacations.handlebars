<h1>Vacations</h1>
<hr>
{{#each vacations}}
    <div class="vacation">
        <h3>{{name}}</h3>
        <p>{{description}}</p>
        {{#if inSeason}}
            <span class="price">{{price}}</span>
            <a href="/cart/add?sku={{sku}}" class="btn btn-default">Buy Now!</a>
            <p>Currency:
                <a href="/set-currency/USD" class="currency {{currenyUSD}}">USD</a>
                <a href="/set-currency/GBP" class="currency {{currenyGBP}}">GBP</a>
                <a href="/set-currency/BTC" class="currency {{currenyBTC}}">BTC</a>
            </p>
        {{else}}
            <span class="outOfSeason">We're sorry, this vacation is currently not in season.</span>
            {{! The "notify me when this vacation is in season" page will be our next task }}
        {{/if}}
        <hr>
    </div>
{{/each}}

{{#section 'head'}}
    <style>
        a.currency {
            text-decoration: none;
        }
        .currency.selected {
            font-weight: bold;
            font-size: 150%;
        }
    </style>
{{/section}}
